{
  "name": "@harmonix-hub/stylelint",
  "version": "1.3.2",
  "description": "This package provides Stylelint configurations to ensuring consistency and collaboration across projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext ts",
    "format": "prettier . --check --cache --ignore-unknown",
    "clean": "rm -rf dist node_modules",
    "test": "jest"
  },
  "dependencies": {
    "stylelint": "^15.11.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-config-recommended-scss": "^13.1.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
    "stylelint-prettier": "^4.0.2",
    "stylelint-scss": "^5.3.1"
  },
  "devDependencies": {
    "@harmonix-hub/eslint": "workspace:*",
    "@harmonix-hub/prettier": "workspace:*",
    "@harmonix-hub/testing": "workspace:*",
    "@harmonix-hub/tsconfig": "workspace:*",
    "@harmonix-hub/babel": "workspace:*",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
