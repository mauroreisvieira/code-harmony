{
  "name": "@harmonix-hub/stylelint",
  "version": "1.3.2",
  "description": "This package provides Stylelint configurations to ensuring consistency and collaboration across projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext ts",
    "clean": "rm -rf dist node_modules",
    "test": "jest"
  },
  "dependencies": {
    "stylelint": "^16.3.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-no-unsupported-browser-features": "^8.0.1",
    "stylelint-prettier": "^5.0.0",
    "stylelint-scss": "^6.2.1"
  },
  "devDependencies": {
    "@harmonix-hub/eslint": "workspace:*",
    "@harmonix-hub/testing": "workspace:*",
    "@harmonix-hub/tsconfig": "workspace:*",
    "@harmonix-hub/babel": "workspace:*",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "typescript": "^5.4.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
