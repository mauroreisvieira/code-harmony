{
  "name": "@harmonix-hub/testing",
  "version": "1.0.0",
  "description": "This package provides Jest configurations to ensuring consistency and collaboration across projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "lint": "eslint . --ext ts",
    "format": "prettier . --check --cache --ignore-unknown",
    "clean": "rm -rf dist node_modules",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "devDependencies": {
    "@harmonix-hub/eslint": "1.0.0",
    "@harmonix-hub/prettier": "1.0.0",
    "@harmonix-hub/tsconfig": "1.0.0",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@types/jest": "^29.5.6",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
   "publishConfig": {
    "access": "public"
  }
}
