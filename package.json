{
  "name": "code-harmony",
  "private": false,
  "version": "1.0.0",
  "description": "Your one-stop repository for unified, hassle-free configurations of Prettier, ESLint, TSConfig, and Jest. Simplify development, ensure consistency, and streamline collaboration effortlessly.",
  "scripts": {
    "prepare": "husky install",
    "start": "turbo run start --parallel --stream",
    "build": "turbo run build",
    "test": "turbo run test --parallel",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint --parallel",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "list": "turbo run list",
    "publish": "turbo publish --yes"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "husky": "^8.0.3",
    "turbo": "1.6.3",
    "semantic-release": "^22.0.5"
  },
  "engines": {
    "node": ">=16.x",
    "pnpm": ">=8.x"
  },
  "packageManager": "pnpm@8.7.0"
}
